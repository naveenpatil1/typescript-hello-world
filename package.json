{
  "name": "typescript-hello-world",
  "version": "1.0.0",
  "description": "A simple Hello World application in TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "ts-node index.ts",
    "server": "npm run build && node dist/server.js",
    "server:dev": "ts-node server.ts",
    "todo:add": "npm start add",
    "todo:list": "npm start list",
    "todo:delete": "npm start delete",
    "todo:complete": "npm start complete"
  },
  "keywords": ["typescript", "todo", "cli", "web-ui"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17"
  }
}
